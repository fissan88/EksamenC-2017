
@{
    ViewBag.Title = "Home";
}

@model ClassLibrary.Model.Teacher

<h2>Teacher Administration</h2>

<h3>Welcome @Html.DisplayFor(model => model.FullName) (@Html.DisplayFor(model => model.Username))</h3>


    @if (Model.Courses.Count > 0)
    {
        <table>
            <tr><td width="200px"><b>Course</b></td><td width="200px"><b>Average absence in %</b></td></tr>
            @foreach (var course in Model.Courses)
            {
                <tr>
                    <td>
                        @Html.ActionLink(@course.Name, "Course", "Course", new { courseId = course.Id }, null)
                    </td>
                    <td>
                        @course.CalcAverageAbsenceRate()%
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <p>You have no courses registered ...</p>
    }
           