
@{
    ViewBag.Title = "Home";
}

@model  WebApplication.Models.AbsenceRegModel

<h3>Register Absence for @Model.Lesson.StartDate - @Model.Lesson.StartDate</h3>


@using (Html.BeginForm())
{
<table>
    <tr><td><b>Student Name</b></td><td><b>State</b></td></tr>
        @for (int i = 0; i < Model.AbsenceRegistrations.Count; i++)
        {

            <tr>
                <td>
                    @Html.DisplayFor(model => model.Students[i].FullName)
                    @Html.HiddenFor(model => model.AbsenceRegistrations[i].Id)
                </td>

                <td>
                    @Html.EnumDropDownListFor(model => model.AbsenceRegistrations[i].AbsenceState)
                </td>

            </tr>
        }
   </table>
   <input type="submit" value ="Save" />
}
</br>
@Html.ActionLink("<< Back to lessons overview", "Course", "Course", new { courseId = Model.CourseId, teacherId = Model.TeacherId }, null)

  
  
