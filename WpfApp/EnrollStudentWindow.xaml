<Window x:Class="WpfApp.EnrollStudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="Enroll student" Height="320" Width="300">
    <Grid>
        <StackPanel>
            <Label Content="Select a course to enroll student to:" />
            <ListView x:Name="enrollStudent_listview_courses" Height="200" Margin="10" Focusable="False" />
            <Button x:Name="enrollStudent_button_enroll" Content="Enroll" Width="150" HorizontalAlignment="Right" Margin="10" IsEnabled="False"/>
        </StackPanel>
    </Grid>
</Window>
