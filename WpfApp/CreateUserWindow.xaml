<Window x:Class="WpfApp.CreateUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="Create new user" Height="170" Width="300">
    <Grid>
        <StackPanel Orientation="Vertical">
            <DockPanel Margin="10">
                <Label Content="Full name:" />
                <TextBox x:Name="createTeacher_textBox_fullname" Width="150" HorizontalAlignment="Right" />
            </DockPanel>
            <DockPanel Margin="10">
                <Label Content="Username:" />
                <TextBox x:Name="createTeacher_textBox_username" Width="150" HorizontalAlignment="Right" />

            </DockPanel>

            <Button x:Name="createTeacher_button_create" Margin="10" Width="150" HorizontalAlignment="Right" Content="OK" />
        </StackPanel>
    </Grid>
</Window>
